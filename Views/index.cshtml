<h1>Address Book</h1>
<h3><a href="/contact/add">Add a new contact</a></h3>
@if (@Model.Count == 0)
{
  <h3>No contacts have been added yet.</h3>
}
@foreach (var contact in Model)
{
  <h3><a href="/contact/@contact.GetId()">@contact.GetName()</a></h3>
}
@* clear contacts *@
<form action ="/contacts/clear" method="post">
  <button type="submit" name="button">Clear all contacts</button>
</form>
